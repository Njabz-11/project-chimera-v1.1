# Project Chimera - Environment Variables Template
# Copy this file to .env and fill in your actual values

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Default LLM Provider (openai or anthropic)
DEFAULT_LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration  
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_MAX_TOKENS=1000
ANTHROPIC_TEMPERATURE=0.7

# Database Configuration
DATABASE_PATH=data/chimera_local.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/main.log

# Web Scraping Configuration
SCRAPING_DELAY_MIN=1
SCRAPING_DELAY_MAX=3
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Lead Generation Configuration
MAX_LEADS_PER_SEARCH=50
LEAD_QUALIFICATION_THRESHOLD=5
